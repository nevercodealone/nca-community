{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
<div class="page-login bottom-20">
    <div class="page-login-field top-15">
        <i class="fas fa-user"></i>
        {{ form_widget(form.lastName, { 'attr': {'placeholder': 'Nachname' } }) }}
        {{ form_errors(form.lastName) }}
        <em>(required)</em>
    </div>
    <div class="page-login-field top-15">
        <i class="fas fa-user"></i>
        {{ form_widget(form.firstName, { 'attr': {'placeholder': 'Vorname' } }) }}
        {{ form_errors(form.firstName) }}
        <em>(required)</em>
    </div>
    <div class="page-login-field top-15">
        <i class="fas fa-user"></i>
        {{ form_widget(form.username, { 'attr': {'placeholder': 'Benutzername' } }) }}
        {{ form_errors(form.username) }}
        <em>(required)</em>
    </div>
    <div class="page-login-field">
        <i class="fas fa-at"></i>
        {{ form_widget(form.email, { 'attr': {'placeholder': 'Deine E-Mail' } }) }}
        {{ form_errors(form.email) }}
        <em>(required)</em>
    </div>
    <div class="page-login-field">
        <i class="fab fa-twitter"></i>
        {{ form_widget(form.twitter, { 'attr': {'placeholder': 'Dein Twitter Handel' } }) }}
        {{ form_errors(form.twitter) }}
        <em>(required)</em>
    </div>
    <div class="page-login-field">
        <i class="fas fa-lock"></i>
        {{ form_widget(form.plainPassword.first, { 'attr': {'placeholder': 'Passwort'} }) }}
        {{ form_errors(form.plainPassword.first) }}
        <em>(required)</em>
    </div>
    <div class="page-login-field bottom-30">
        <i class="fas fa-lock"></i>
        {{ form_widget(form.plainPassword.second, { 'attr': {'placeholder': 'Passwort wiederholen' } }) }}
        {{ form_errors(form.plainPassword.second) }}
        <em>(required)</em>
    </div>
    <input type="submit" value="{{ 'profile.edit.submit'|trans }}" class="button bg-highlight button-full button-rounded button-s uppercase ultrabold" />
</div>
{{ form_end(form) }}
